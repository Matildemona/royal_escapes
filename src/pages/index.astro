<style>
  #lottiefile {
    position: absolute;
    z-index: 100;
  }
  .testemonial {
    text-align: center;
    font-size: 2.3rem;
    padding-top: 20px;
  }

  .writer {
    text-align: right;
    font-size: 1.5rem;
    padding: 20px;
    margin-right: 100px;
  }

  .testemonial_knap {
    text-align: center;
  }

  .quiz {
    padding-top: 50px;
    padding-bottom: 20px;

    text-align: center;
    font-size: 2rem;
  }
  .img_normal {
  }
  .img_uv {
    display: block;
    margin-top: -571px;
    animation: uv_kf 8s linear infinite both;
  }

  @keyframes uv_kf {
    /*Animation der skifter billede*/
    0% {
      opacity: 0%;
    }
    30% {
      opacity: 0%;
    }
    40% {
      opacity: 100%;
    }
    70% {
      opacity: 100%;
    }

    100% {
      opacity: 0%;
    }
  }
</style>
